extends ../layouts/default

block content
  .container-fluid.p-0
    div.w-100.bg-default(style="background: url('public/images/wheather/#{wheather.condition}.jpg');background-position: center;background-repeat: no-repeat;background-size: cover;")
      div.mt-5
        h2.d-flex.justify-content-center.align-content-center(style='padding: .5em 1em;background: rgba(8,8,8,.1);')
          | #{wheather.condition}  #{wheather.city}
    .container
      form#search.add-btn-wrap.round-btn.animated.bounce.slow(autocomplete="off",style='top: 100px;bottom: unset;z-index: 999;')
        input#myInput.box-shadow(type='search', placeholder='Search', style='top: 20px;', name='city')
      .row.mt-2
        .col-md-5.pl-2.pr-2(style='height: 250px;')
          .view.info-img-wrap.h-100
            img#weatherImg.img-fluid.m-0(src='public/images/wheather/#{wheather.condition}.jpg', alt='placeholder', style='height: 100%;width: 100%;')
            .mask.waves-effect.waves-light.d-flex.flex-row.justify-content-between.rgba-black-slight
              .d-flex
                .wheather-img.d-flex.align-items-center.p-4
                  img(src='public/images/wheather/icons/sunny.jpg', width='70px', height='70px')
              .d-flex.flex-column.align-content-stretch.h-100
                .d-flex.h-100.wheather-info.justify-content-end.p-2
                  span.temp
                    | #{wheather.temperature}
                  span.celcius
                    | &deg;C
                .d-flex.h-100.flex-column
                  .d-flex.h-100.justify-content-end.align-items-center.text-white.place-info.p-3
                    | #{wheather.city}, #{wheather.country_code}
                  .d-flex.h-100.justify-content-end.align-items-center.text-white.time-info.p-3
                    | #{date}
        .col-md-7.p-md-0.p-sm-3(style='max-height: 250px;')
          .d-flex.flex-column.info-wrap.h-100(style='background:white;border:1px solid #cdcdcd;')
            .info-header.wheather-header.position-relative.color-wheather
              h4.text-center.m-0.p-3
                | Right now
              //.position-absolute.d-flex.flex-row
            .info-body.h-100
              .info-graph.h-100
                .d-flex.flex-row.justify-content-around.h-100.align-items-center.p-3
                  .d-flex.flex-column.justify-content-center
                    span.info-icon.d-flex.justify-content-center.align-items-center
                      i.fas.fa-cloud
                    span.info-text
                      | #{wheather.condition}
                  .d-flex.flex-column.justify-content-center
                    span.info-icon.d-flex.justify-content-center.align-items-center
                      i.fas.fa-arrow-up(style='transform: rotate(#{wheather.compas}deg)')
                    span.info-text
                      | #{wheather.speed} km/h
                  .d-flex.flex-column.justify-content-center
                    span.info-icon.d-flex.justify-content-center.align-items-center
                      i.fas.fa-thermometer-empty
                    span.info-text
                      | #{wheather.min_temperature} &deg;C
                  .d-flex.flex-column.justify-content-center
                    span.info-icon.d-flex.justify-content-center.align-items-center
                      i.fas.fa-thermometer-full
                    span.info-text
                      | #{wheather.max_temperature} &deg;C
      // Next wheather row
      .row.mt-2
        .d-flex.flex-lg-row.flex-md-row.flex-column-reverse.w-100
          .col-md-7.p-md-0.p-sm-3.pl-md-2.pl-sm-3
            .d-flex.flex-column.info-wrap.p-3(style='background:white;border:1px solid #cdcdcd;')
              .info-header.wheather-header.position-relative.pb-0.color-wheather.d-flex.flex-row.justify-content-between.align-items-center(style='border: none;')
                h4.p-3
                  | Details
                .d-flex
                  #add-btn.round-btn-small
                    a.btn.btn-bg-home.d-flex.justify-content-center.align-items-center.p-0.box-shadow(href='/notes/create')
                        i.fas.fa-plus
                  .round-btn-small
                    a.btn.d-flex.justify-content-center.align-items-center.p-0.box-shadow.bg-wheather(href='/notes/create')
                      i.fas.fa-city
              .info-body
                .d-flex.flex-row.flex-lg-row.flex-md-row.flex-column
                  table.table.table-borderless.m-2.wheather-table.table-responsive
                    tbody.d-flex.flex-column
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Condition
                        td #{wheather.condition}
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Pressure
                        td #{wheather.pressure} pHa
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Min. temp
                        td #{wheather.min_temperature} &deg;C
                      tr
                        th Lontitude
                        td #{wheather.lon}
                  table.table.table-borderless.m-2.wheather-table.table-responsive
                    tbody.d-flex.flex-column
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Speed
                        td #{wheather.speed} km/h
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Humidity
                        td #{wheather.humidity} %
                      tr(style='border-bottom: 1px solid #cdcdcd;')
                        th Max. temp
                        td #{wheather.max_temperature} &deg;C
                      tr
                        th Lattitute
                        td #{wheather.lat}
            //.div(style='witd:100%;height: 200px;background: url("../images/wheather/wheather.jpg");background-position: bottom; background-attechment: fixed')
            .view.info-img-wrap
              img.img-fluid.m-0(src='public/images/wheather/wheather.jpg', alt='placeholder', style='height: 200px;width: 100%;')
              .mask.waves-effect.waves-light.d-flex.flex-column.rgba-white-light.justify-content-around.pt-2.pb-2
                  .d-flex.h-100.flex-row
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.br-light
                      img(src='public/images/wheather/icons/humidity.png', width='50px', height='50px')
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.br-light
                      img(src='public/images/wheather/icons/sunrise.png', width='50px', height='50px')
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center
                      img(src='public/images/wheather/icons/sunrise.png', width='50px', height='50px')
                  .d-flex.h-100.flex-row
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.ft-30.br-light
                        span.temp
                          | #{wheather.humidity}
                        span.celcius
                          | %
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.ft-30.br-light
                        span.temp
                          | #{wheather.sunrise}
                    .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.ft-30
                        span.temp
                          |  #{wheather.sunset}
                  .d-flex.h-100.flex-row
                      .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.br-light
                        small
                          | Humidity
                      .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center.br-light
                        small
                          | Sunrise <small>(CET)</small>
                      .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center
                        small
                          | Sunset <small>(CET)</small>

          .col-md-5.p-0(style='border-left: 1px solid white;')
            .view.h-100.info-img-wrap
              img.img-fluid.m-0(src='public/images/wheather/wheather2.jpg', alt='placeholder', style='height:100%;width: 100%;')
              .mask.waves-effect.waves-light.d-flex.flex-column.align-items-center.h-100.justify-content-center.p-lg-4.p-md-2.p-2
                .d-flex.w-100.m-1.justify-content-center.font-robo(style="background: rgba(255,255,255,.5);")
                  .title.text-dark
                    | Find wheather
                .d-flex.w-100.m-1.justify-content-center.font-robo(style="background: rgba(255,255,255,.5);")
                  h5.m-0.text-center.text-dark.p-4
                    | Search for any location for more wheather information. And save your favorite city.
    // Wheather info days
    .container.mb-5
      .m-5.text-center.color-wheather.text
        h4.p-1
          | Daily 3 hour forecast
      .d-flex.flex-column
        //d-flex.flex-lg-row.flex-md-row.flex-column.days-wrap
        .w-100.days-wrap
          each fc in forecast
            .d-flex.flex-column.width-responsive-50.float-left
              .d-flex.bg-days.justify-content-center.align-items-center.p-3
                span.text-white.font-weight-bold
                  | #{fc.time}
              .d-flex.h-100.flex-row.pt-4.bg-days.flex-column
                .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center
                  img(src='http://openweathermap.org/img/w/#{fc.icon}.png')
                .d-flex.justify-content-center.text-white.align-items-center.p-lg-4.p-md-2.p-0
                    b
                      | #{fc.condition}
                .d-flex.h-100.flex-row.pt-4.pb-4
                  .d-flex.h-100.w-100.align-items-center.text-white.place-info.justify-content-center
                    span.temp
                      | #{fc.temp}
                    small.celcius
                      | &deg;C

  script(src='/~s1131670/P2_NodeJS_Opdracht/70/public/javascripts/auto-complete.js')
